{{#if success_msg}}
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative my-1" id="alert-container">
    <strong class="font-bold">Success!</strong>
    <span class="block sm:inline">{{success_msg}}</span>
    <span id="closeBtn" class="absolute top-0 bottom-0 right-0 px-4 py-3">
      <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <title>Close</title>
        <path
          d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
      </svg>
    </span>
  </div>
{{/if}}
{{#if warning_msg}}
<div class="bg-amber-100 border border-amber-400 text-amber-700 px-4 py-3 rounded relative my-1" id="alert-container">
  <strong class="font-bold">Warning!</strong>
  <span class="block sm:inline">{{warning_msg}}</span>
  <span id="closeBtn" class="absolute top-0 bottom-0 right-0 px-4 py-3">
    <svg class="fill-current h-6 w-6 text-amber-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
      <title>Close</title>
      <path
        d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
    </svg>
  </span>
</div>
{{/if}}
{{#if error_msg}}
<div class="bg-rose-100 border border-rose-400 text-rose-700 px-4 py-3 rounded relative my-1" id="alert-container">
  <strong class="font-bold">Error!</strong>
  <span class="block sm:inline">{{error_msg}}</span>
  <span id="closeBtn" class="absolute top-0 bottom-0 right-0 px-4 py-3">
    <svg class="fill-current h-6 w-6 text-rose-500" role="button" xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20">
      <title>Close</title>
      <path
        d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
    </svg>
  </span>
</div>
{{/if}}
{{#if errors}}
  {{#each errors}}
    <div class="bg-rose-100 border border-rose-400 text-rose-700 px-4 py-3 rounded relative my-1" id="alert-container">
      <strong class="font-bold">Error!</strong>
      <span class="block sm:inline">{{this.message}}</span>
      <span id="closeBtn" class="absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="fill-current h-6 w-6 text-rose-500" role="button" xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20">
          <title>Close</title>
          <path
            d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
        </svg>
      </span>
    </div>
  {{/each}}
{{/if}}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const closeBtn = document.querySelector('#closeBtn')
    const alertContainer = document.querySelector('#alert-container')
    closeBtn.addEventListener('click', function () {
      alertContainer.style.display = 'none'
    })
  })
</script>