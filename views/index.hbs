<section class="grid grid-cols-[1fr_2fr_1fr]">
  <div class="col-start-2">
    <div>
      <form action="/search">
        <select name="category" id="category" class="border border-slate-300 rounded w-full h-8 py-1 px-4" onChange="this.form.submit()">
          <option value="" disabled selected hidden>類別搜尋</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </form>
    </div>
    <div class="my-8">
      <h5 class="font-semibold text-2xl">總金額</h5>
      <div class="text-orange-400 font-bold text-6xl text-center">{{ totalAmount }}</div>
    </div>
    <div class="mb-4">
      <ul class="text-slate-800">
        {{#each records}}
          <li class="grid grid-cols-4 gap-1 items-center odd:bg-stone-200 even:bg-stone-50">
            <div class="flex justify-between items-center px-4 py-2 col-span-3">
              <div class="flex items-center">
                <div class="text-sky-300 text-4xl">
                  <i class="{{this.categoryIcon}}"></i>
                </div>
                <div class="pl-2">
                  <div class="text-xl font-semibold">{{this.name}}</div>
                  <p class="text-sm">{{this.date}}</p>
                </div>
              </div>
              <div class="text-xl font-semibold">{{this.amount}}</div>
            </div>
            <div class="px-4 py-2">
              <a href="/edit/{{this._id}}" class="border border-green-400 rounded px-4 py-1 text-green-400 hover:font-semibold hover:text-green-600 hover:border-green-600 hover:bg-green-50">修改</a>
              <form action="/{{this._id}}?_method=DELETE" method="POST" class="inline">
                <button type="submit"
                  class="border border-rose-400 rounded px-4 py-1 text-rose-400 hover:font-semibold hover:text-rose-600 hover:border-rose-600 hover:bg-rose-50">刪除</button>
              </form>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
    <a href="/new" class="bg-orange-400 shadow-md text-white rounded h-8 px-4 py-1">新增支出</a>
  </div>
</section>